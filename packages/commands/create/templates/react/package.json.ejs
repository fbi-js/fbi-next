{
  "name": "<%= create.name %>",
  "version": "0.0.0",
  "description": "<%= create.description %>",
  "private": true,
  "scripts": {
    "dev": "fbi serve",
    "build": "fbi build",
    "format": "npx fbi format <% if (process.env.FBI_ENV) { %>--local <% } %>"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "typescript": "^4.1.3",
    "@fbi-js/eslint-config-react-typescript": "^1.2.2",
    "@fbi-js/cli": "^5.0.0-alpha.0",
    "@fbi-js/format": "^1.0.0"
  },
  "fbi": {
    "create": {
      "template": "<%= create.template %>",
      "features": <%- JSON.stringify(create.features) %>
    },
    "format": {
      "pattern": "src/**/*"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "eslintConfig": {
    "extends": [
      "@fbi-js/eslint-config-react-typescript"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ]
    }
  },
  "stylelint": {
    "extends": "@fbi-js/stylelint-config"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "endOfLine": "lf",
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "always"
  }
}
